<h1>Log In Here</h1>

<%= form_for @user, url: login_path, method: :post do |f| %>
  <%= f.label :username %>:
  <%= f.text_field :username %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>

  <%= f.submit %>
<% end %>