<%= form_for (setup_place(@place)) do |f| %>
  <%= f.label :name %>:<br>
  <%= f.text_field :name %><br><br>

  <%= f.label :neighborhood_id %>:<br>
  <%= f.collection_select :neighborhood_id, Neighborhood.all, :id, :name %><br><br>

  <%= f.fields_for :address do |ff| %>
    <%= ff.label :street1 %><br>
    <%= ff.text_field :street1 %><br><br>

    <%= ff.label :street2 %><br>
    <%= ff.text_field :street2 %><br><br>

    <%= ff.label :city %><br>
    <%= ff.text_field :city %><br><br>

    <%= ff.label :state %><br>
    <%= ff.text_field :state %><br><br>

    <%= ff.label :zipcode %><br>
    <%= ff.text_field :zipcode %><br><br>
  <% end %>

  <%= f.label :wifi, "Has wifi?" %>
  <%= f.check_box :wifi %>

  <%= f.label :wifi_quality %>
  <%= f.select :wifi_quality, [['Amazing, can stream movies', 4], ['Works for what I need', 3], ['Works, but cuts in and out', 2], ['Barely works', 1]], {include_blank: true} %><br><br>

  <%= f.label :public_restroom, "Has a restroom?" %>
  <%= f.check_box :public_restroom %>

  <%= f.label :restroom_cleanliness %>
  <%= f.select :restroom_cleanliness, [['Super clean', 4], ['Average', 3], ['Not great, but useable', 2], ['Dirty, missing toilet paper, etc.', 1]], {include_blank: true} %><br><br>

  <%= f.label :costs_money, "Costs money?" %>
  <%= f.check_box :costs_money %><br><br>

  <%= f.label :friend_ids, "Share with friend?" %><br />
  <%= f.collection_check_boxes :friend_ids, @possible_friends, :id, :username do |b| %>
      <%= b.check_box %>
      <%= b.label %><br><br>
  <% end %>
  

  <%= f.submit %>
<% end %>