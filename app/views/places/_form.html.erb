<%= form_for @user do |f| %>
  <%= f.fields_for :places_attributes do |place_form| %>
    <%= place_form.label :name %>:<br>
    <%= place_form.text_field :name %><br><br>

    <%= place_form.label :neighborhood_id %>:<br>
    <%= place_form.collection_select :neighborhood_id, Neighborhood.all, :id, :name %><br><br>

    <%= place_form.label :address %>:<br>
    <%= place_form.text_field :address %><br><br>

    <%= place_form.label :comments %><br>
    <%= place_form.text_area :comments %><br><br>

    <%= place_form.label :wifi, "Has wifi?" %>
    <%= place_form.check_box :wifi %>

    <%= place_form.label :wifi_quality %>
    <%= place_form.select :wifi_quality, [['Amazing, can stream movies', 4], ['Works for what I need', 3], ['Works, but cuts in and out', 2], ['Barely works', 1]], {include_blank: true} %><br><br>

    <%= place_form.label :public_restroom, "Has a restroom?" %>
    <%= place_form.check_box :public_restroom %>

    <%= place_form.label :restroom_cleanliness %>
    <%= place_form.select :restroom_cleanliness, [['Super clean', 4], ['Average', 3], ['Not great, but useable', 2], ['Dirty, missing toilet paper, etc.', 1]], {include_blank: true} %><br><br>

    <%= place_form.label :costs_money, "Costs money?" %>
    <%= place_form.check_box :costs_money %><br><br>

    <%= place_form.label :shared_place, "Share with friend?" %><br />
    <%= place_form.collection_check_boxes :friend_ids, User.all, :id, :username do |b| %>
        <%= b.check_box %>
        <%= b.label %><br><br>
    <% end %>
  <% end %>
  <%= f.submit "Submit" %>
<% end %>